<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dz.member.dao.MemberDAO">
    <select id="list" resultType="com.dz.member.vo.MemberVO">
		select
        	 *
        from member
        where name like concat('%', #{search}, '%')
        limit #{pageStart}, #{pageEnd}
    </select>

    <select id="listSize" parameterType="String" resultType="long">
        select count(*)
        from member
        where name like concat('%', #{search}, '%')
    </select>

    <select id="findById" resultType="com.dz.member.vo.MemberLoginParam">
        select
            *
        from member
        where userId = #{userId}
    </select>

    <select id="findByIdVO" resultType="com.dz.member.vo.MemberVO">
        select
            *
        from member
        where userId = #{userId}
    </select>

    <insert id="save">
        insert into member(
            userId, pwd
        ) values (
                  #{userId}, #{pwd}
                         )

    </insert>
    <update id="edit">
        update member
        set name = #{name}
        where userId = #{userId}
    </update>
</mapper>